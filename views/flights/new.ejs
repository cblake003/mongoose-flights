<%- include('../partials/header') %>

<h2>Enter a New Flight</h2>
<form action="/flights" method="POST">
  <label>Airline
      <select name="airline">
        <% flightCreationData.airline.forEach(function(a) { %>
          <option value="<%= a %>"><%= a %></option>
       <% }) %>
      </select>
  </label><br>
  <label>Airport:
    <select name="airport">
        <% flightCreationData.airport.forEach(function(a) { %>
          <option value="<%= a %>"><%= a %></option>
       <% }) %>
    </select>
  </label><br>
  <label>Flight No:
    <input type="number" name="flightNo" min="10" max="9999">
  </label><br>
  <label>Departs:
    <input type="datetime-local" name="departs">
  </label><br>
  <button type="submit">SUBMIT</button>
</form>
<p><%= errorMsg %></p>

<%- include('../partials/footer') %>
